extends ../layouts/index.pug

include ../components/Profile/BackButton/index.pug
include ../components/Profile/UserLogo/index.pug
include ../components/Profile/UserName/index.pug


block variables 
	-const title = "Личный кабинет";
	
prepend head
	link(rel="stylesheet" href="../styles/profile.sass")


block content 
	main.page
		.profile
			a.profile__nav(href="./chat.pug")
				+backButton
			.profile__content
				.profile__header
					.profile__logo
						+userLogo
					.profile__userName
						+userName("Имя пользователя")
				
block scripts
	script(src="../utils/modal.js" type="module")