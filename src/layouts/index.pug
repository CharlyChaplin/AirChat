include ../components/TitleData/titleData.pug

block variables
	- let title = ""

doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")

		link(rel="apple-touch-icon" sizes="180x180" href="../favicon/apple-touch-icon.png")
		link(rel="icon" type="image/png" sizes="32x32" href="../favicon/favicon-32x32.png")
		link(rel="icon" type="image/png" sizes="16x16" href="../favicon/favicon-16x16.png")
		link(rel="manifest" href="../favicon/site.webmanifest")
		link(rel="mask-icon" href="../favicon/safari-pinned-tab.svg" color="#5bbad5")
		meta(name="msapplication-TileColor" content="#da532c")
		meta(name="theme-color" content="#ffffff")

		block head
			link(rel="stylesheet" href='../styles/fonts.sass')
			link(rel="stylesheet" href='../styles/null.sass')
			link(rel="stylesheet" href='../styles/styles.sass')
			link(rel="stylesheet" href='../styles/sass-mixins.sass')
			link(rel="stylesheet" href='../styles/scroll.sass')
			title #{title}

	body 
		.wrapper
			block content
				h1 No content

		block scripts
			script(type="module" src="../utils/functions.js") 